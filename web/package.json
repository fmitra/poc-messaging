{
  "name": "web",
  "version": "1.0.0",
  "description": "",
  "main": "index.tsx",
  "scripts": {
    "test": "jest --coverage",
    "test:dev": "jest -o --watch",
    "lint": "eslint --ext .ts,.tsx src",
    "start": "webpack-dev-server --config ./webpack.config.dev.js --hot --history-api-fallback --progress",
    "config:dev": "cp ./src/config/development.ts ./src/config/local.ts",
    "config:stage": "cp ./src/config/staging.ts ./src/config/local.ts",
    "config:prod": "cp ./src/config/production.ts ./src/config/local.ts",
    "build": "NODE_ENV=production webpack --config ./webpack.config.prod.js --history-api-fallback --progress --bail"
  },
  "author": "Francis Mitra",
  "license": "BSD 3-Clause",
  "dependencies": {
    "preact": "^8.4.2"
  },
  "devDependencies": {
    "@types/fetch-mock": "^7.3.0",
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "clean-webpack-plugin": "^3.0.0",
    "ejs-loader": "^0.5.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-react": "^7.13.0",
    "fetch-mock": "^7.3.3",
    "html-webpack-plugin": "^4.3.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^26.1.0",
    "jsdom": "^16.2.2",
    "node-fetch": "^2.6.0",
    "preact-render-spy": "^1.3.0",
    "react-test-renderer": "^16.8.6",
    "ts-jest": "^24.3.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/dist/**",
      "src/**/*.{ts,js,tsx,jsx}"
    ],
    "moduleNameMapper": {
      "^@messaging/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx",
      "json",
      "node"
    ]
  }
}
